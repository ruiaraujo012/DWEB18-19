extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-grey
                h1 Registo de Obras Músicais
            .w3-container
                table.w3-table.w3-bordered
                    tr
                        th Tipo
                        th Título
                    each tipo in tipos
                        tr
                            td= tipo.tipo
                            td
                                ul
                                    each i in tipo.partituras
                                        li 
                                            a(href='http://localhost:5000/part/' + i._id)= i.titulo
            footer.w3-container.w3-light-grey
                address Gerado por Pug