extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-grey
                h1= insts.titulo
            .w3-container
                h2= insts.tipo
                dl
                    dt 
                        b Compositor:
                        dd= insts.compositor
                        
                    if insts.arranjo
                        dt 
                            b Arranjo:
                            dd= insts.arranjo
                table.w3-table.w3-table-all.w3-hoverable
                    if insts.instrumentos
                        tr
                            th Instrumento
                            th Partitura
                            th Voltar
                        each inst in insts.instrumentos
                            tr
                                td= inst.nome
                                td
                                    dl
                                        dt Path
                                        dd 
                                            a(href= inst.partitura.path)= inst.partitura.path
                                        if inst.partitura.voz
                                            dt Voz
                                            dd= inst.partitura.voz
                                        if inst.partitura.clave
                                            dt Clave
                                            dd= inst.partitura.clave
                                        if inst.partitura.afinacao
                                            dt Afinação
                                            dd= inst.partitura.afinacao
                                td
                                    dl
                                        dd
                                            a(href='http://localhost:5000/index').w3-btn.w3-blue Voltar à página inicial
                    else
                        h2.w3-center.w3-red Partituras indisponíveis
                        h3.w3-center 
                            a(href='http://localhost:5000/index').w3-btn.w3-blue Voltar à página inicial
            footer.w3-container.w3-light-grey
                address Gerado por Pug