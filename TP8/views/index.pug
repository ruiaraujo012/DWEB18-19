extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3.w3-left-align Ficheiros
            .w3-container
                form.w3-container(id='filesForm' method="POST" enctype='multipart/form-data')
                    - var id = new Date();
                    input.w3-input.w3-border.w3-round-large.w3-light-grey(type="hidden", name="id", value= id)
                    .w3-row-padding.w3-padding-24
                        .w3-third
                            input.w3-input.w3-border.w3-light-grey(id='file' type="file" name="ficheiro")
                        .w3-third
                            input.w3-input.w3-border.w3-light-grey(id='desc' type="text" placeholder="Descrição" name="desc")
                        .w3-third
                            button.w3-button.w3-round-large.w3-teal(id='add') Adicionar ficheiro
                hr
            .w3-container.w3-padding-24
                h3.w3-center Lista de Ficheiros
                table.w3-table-all(id='files')
            footer.w3-container.w3-teal
